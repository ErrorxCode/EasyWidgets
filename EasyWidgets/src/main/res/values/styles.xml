<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ClassicRed" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@drawable/text_sober_red</item>
        <item name="android:background">@drawable/radio_sober_red</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ClassicBlue" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@drawable/text_sober_white</item>
        <item name="android:background">@drawable/radio_sober_white</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ModernBlue" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@drawable/text_modern</item>
        <item name="android:background">@drawable/radio_modern_blue</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ModernRed" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@drawable/text_modern</item>
        <item name="android:background">@drawable/radio_modern_red</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ModernQuiz" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/radio_modern_quiz</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:tag">modern</item>
    </style>

    <style name="ClassicQuiz" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:tag">classic</item>
        <item name="android:background">@drawable/radio_classic_quiz</item>
        <item name="android:buttonTint">?android:colorSecondary</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:padding">20dp</item>
    </style>

</resources>